<h1><%= t('.header', header: @question.test.title) %></h1>

<h2><%= t('.question', question: @question.body) %></h2>

<%= link_to t('link_to_new_answer'), new_admin_question_answer_path(@question) %>

<table>
  <tr>
    <th><%= t('.answers') %></th>
    <th colspan="2"><%= t('.actions') %></th> 
  </tr>
  <%= render @question.answers %>
</table>

<%= link_to t('link_to_edit'), edit_admin_question_path(@question) %>
<%= link_to t('link_to_back'), admin_test_path(@question.test_id) %>
