  
<tr>
  <td class="align-middle"><%= badge.title %></td>
  <td class="align-middle"><%= image_tag badge.image, size: "90x90" %></td>
  <td class="align-middle"><%= badge.rule_name %></td>
  <td class="align-middle"><%= badge.rule_value %></td>
  <td class="align-middle"><%= link_to t('link_to_show'), admin_badge_path(badge) %> |</td>
  <td class="align-middle"><%= link_to t('link_to_edit'), edit_admin_badge_path(badge) %> |</td>
  <td class="align-middle">
    <%= link_to t('link_to_delete'), 
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: t('confirm') } %>
  </td>
</tr>
