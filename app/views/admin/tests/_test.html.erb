<tr>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test.level %></td>
  <td class="align-middle"><%= test.questions.count %></td>
  <td class="align-middle"><%= t('min', min: test.timer) %></td>
  <td class="align-middle"><%= link_to t('link_to_show'), admin_test_path(test) %> |</td>
  <td class="align-middle">
    <%= link_to t('link_to_edit'), 
                edit_admin_test_path(test),
                data: { test_id: test.id,
                      locale_edit: t('link_to_edit'),
                      locale_cancel: t('link_to_cancel')},
                class: 'form-inline-link' %> |
  </td>
  <td class="align-middle">
    <%= link_to t('link_to_delete'), 
                admin_test_path(test),
                method: :delete,
                data: { confirm: t('confirm') } %>
  </td>
</tr>
